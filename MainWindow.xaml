<Window x:Class="Projet2Cp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet2Cp" xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">

    
        <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >


            <Rectangle DockPanel.Dock="Top" Stroke="Black" Fill="Gray" Height="20" />
            <Rectangle DockPanel.Dock="Left" Fill="Green"  Width="100"/>







            <local:toolBarLibreLibre x:Name="toolBar" DockPanel.Dock="Right"  />
            <local:niveauxLibre DockPanel.Dock="Top"/>


           
                    <Canvas Name="canvas" 
                Background="{StaticResource MyGrayGridBrush}"
                MouseLeftButtonDown="canvas_MouseLeftButtonDown"
                            
                MouseMove="canvas_MouseMove"
                MouseRightButtonDown="canvas_MouseRightButtonDown"
                MouseLeftButtonUp="canvas_MouseLeftButtonUp">
            <TextBlock x:Name="txt" FontSize="15"  Canvas.Left="0" Canvas.Top="0"/>
        </Canvas>






        </DockPanel>
    
</Window>
