
    
      <Page x:Class="Projet2Cp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet2Cp" xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        >
    <Page.Resources>
        <Style x:Key="Dock" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#1CB81C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="SnapsToDevicePixels" Value="True" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border BorderBrush="Black" BorderThickness="1.5" CornerRadius="5" Background="{TemplateBinding Background}">
                            <Grid>

                                <ContentPresenter x:Name="MyContentPresenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8" />
                                <Setter Property="Foreground" Value="White" />

                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.7" />
                                <Setter Property="Opacity" Value="0.5" />

                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>



    <DockPanel x:Name="myDock">
        <Border BorderBrush="Black" BorderThickness="2,0,2,2" DockPanel.Dock="Top">
            <Grid  Height="35"  Background="LightGray">


            <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                   


                </Grid.ColumnDefinitions>
                


                        <Border Height="30" Grid.Column="1" BorderThickness="1.5" CornerRadius="4" BorderBrush="Black">
                    <StackPanel  Orientation="Horizontal"  >
                    <Image Height="25" Width="25" HorizontalAlignment="left"  Source="./Acceuil/user.png" />
                        <TextBlock x:Name="UserName" Margin="5" FontFamily="{StaticResource VigaRegular}" Foreground="White"
                           VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                </StackPanel>
               </Border>
                <Button Background="Transparent" Style="{StaticResource Dock}" Grid.Column="2" Cursor="Arrow" ToolTip="{DynamicResource sortir}"   Click="ButtonClickLogout" HorizontalAlignment="Center"   Width="40" Height="30"  >
                <Image Source="./Acceuil/logout.png" Height="30" Width="30" />
                </Button>


            <Viewbox  HorizontalAlignment="Left" Grid.Column="0" Stretch="Uniform">
            <StackPanel
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Opacity="0.9"
            Orientation="Horizontal"
               
            >
               
                    
                       
                        
                        <Menu
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Foreground="Black" FontFamily="{StaticResource VigaRegular}"   
                Background="Transparent"
                >
                    <MenuItem Header="{DynamicResource aide}" 
                          FontSize="20"
                          Padding="5,0,5,0"
                          >
                                <MenuItem Header="{DynamicResource prp}" FontSize="20"
                              ToolTip="Comment utiliser l'application"
                              >
                            <MenuItem.Icon>

                                <Image 
                                Source="./Acceuil/question (1).png" Height="25" Width="25" Stretch="Uniform"
                                />

                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                </Menu>
            </StackPanel>
        </Viewbox>
        </Grid>
            </Border>
        
            <Grid Width="140"  DockPanel.Dock="Left" Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition  Height="140"/>

                <RowDefinition Height="2.2*"/>
                <RowDefinition Height="2.2*"/>
                <RowDefinition Height="2.2*"/>
            </Grid.RowDefinitions>
            <Border x:Name="logo" MouseLeftButtonDown="logo_MouseLeftButtonDown" Cursor="Hand" Background="White" Grid.Row="0" CornerRadius="7" BorderThickness="2,1,2,2" BorderBrush="Black"  Width="Auto" >
                <Viewbox Stretch="Fill" >
                
                <Image  VerticalAlignment="Center" HorizontalAlignment="Center" Height="150" Width="150" Source="./Acceuil/logo.png"/>
                    
            
                </Viewbox>
            </Border>





            <Button Cursor="Hand" Style="{StaticResource Dock}" Background="#1CB81C" Height="Auto" Grid.Row="1" Click="ButtonClickCours" ClickMode="Press" >

                
                    <StackPanel>
                        <Image x:Name="CoursImg" Source="./Acceuil/Cours.png" Margin="1" Width="100" Height="100"/>
                        <TextBlock x:Name="TBCours"  HorizontalAlignment="Center"
                        Text="{DynamicResource cours}" FontSize="30"
                        Foreground="White"
                        FontFamily="{StaticResource BwStretchRegular}" FontWeight="Heavy"   
                        Margin="0"
                        />
                    </StackPanel>
               
            </Button>



            <Button Cursor="Hand" Style="{StaticResource Dock}" x:Name="ButtonExo"  Background="#1CB81C" Click="ButtonClickExo" ClickMode="Press"  Height="Auto" Grid.Row="2">
               
                    <StackPanel >
                        <Image Stretch="Uniform" x:Name="ExoImg" Source="./Acceuil/Exercices.png" Width="100" Height="100"/>
                        <TextBlock  x:Name="TBExo"
                    Text="{DynamicResource exos}" FontSize="25"  HorizontalAlignment="Center"
                     Foreground="Snow"
                    FontFamily="{StaticResource BwStretchRegular}" FontWeight="Heavy"
                    Margin="0"/>
                    </StackPanel>
               
            </Button>


            <Button Cursor="Hand" Style="{StaticResource Dock}" Background="#1CB81C" Grid.Row="3" Click="ButtonClickLibre" ClickMode="Press" >
                
                    <StackPanel >
                        <Image x:Name="LibreImg" Source="./Acceuil/Libre.png" Margin="1" Width="100" Height="100"/>
                        <TextBlock  x:Name="TBLibre"
                    Text="{DynamicResource libre}" HorizontalAlignment="Center" FontSize="30"  
                     Foreground="Snow" 
                    FontFamily="{StaticResource BwStretchRegular}" FontWeight="Heavy" 
                    Margin="0"
                       />
                    </StackPanel>
               

            </Button>
            






        </Grid>


     


    </DockPanel>
</Page>
