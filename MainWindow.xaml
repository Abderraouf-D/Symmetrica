
    
      <Window x:Class="Projet2Cp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet2Cp" xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="570" Width="906" 
         >




    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="12*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Frame  x:Name="MainFrame" Grid.Column="1" Grid.Row="1" NavigationUIVisibility="Hidden"/>

        <TextBlock 
                Background="green"
                Grid.Column="0"
                Grid.Row="1"
            />

        <Viewbox Stretch="Uniform">
            <StackPanel
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Opacity="0.9"
            Orientation="Horizontal"
            >
                <Menu
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Foreground="Black"
                >
                    <MenuItem Header="Fichier" 
                          FontSize="20"
                          Padding="5,0,5,0"
                          >
                        <MenuItem Header="Ouvrir"
                              ToolTip="Ouvrir une nouvelle fenêtre"
                              >

                        </MenuItem>
                        <MenuItem Header="Enregistrer"
                              ToolTip="Enregistrer les modifications">

                        </MenuItem>
                        <MenuItem Header="Quitter" 
                              ToolTip="Quitter l'application"
                              >


                        </MenuItem>
                    </MenuItem>
                </Menu>
                <Menu
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Foreground="Black"
                >
                    <MenuItem Header="Editer" 
                          FontSize="20"
                          Padding="5,0,5,0"
                          >
                        <MenuItem Header="Copier"
                              ToolTip="Copier (Ctrl + C)"
                              >

                        </MenuItem>
                        <MenuItem Header="Coller"
                              ToolTip="Coller (Ctrl + V)"
                              >

                        </MenuItem>
                    </MenuItem>
                </Menu>
                <Menu
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Foreground="Black"
                >
                    <MenuItem Header="Aide" 
                          FontSize="20"
                          Padding="5,0,5,0"
                          >
                        <MenuItem Header="A propos"
                              ToolTip="Comment utiliser l'application"
                              >

                        </MenuItem>
                    </MenuItem>
                </Menu>
            </StackPanel>
        </Viewbox>

        <Viewbox Stretch="Uniform"
                 Grid.Row="1"
                 Grid.Column="1"
                 Name="ViewBoxContainer"
                 >
            <Grid
            Grid.Row="1"
            Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="1.5*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>


            </Grid>
        </Viewbox>
    </Grid>
</Window>
