<Page x:Class="Projet2Cp.LibreExoEns"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projet2Cp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibreExoEns">
    <DockPanel x:Name="myDock" ClipToBounds="True"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        
        <Border x:Name="myBorder" DockPanel.Dock="Right" BorderThickness="2" BorderBrush="Black">
            <local:toolBarEnseignant  x:Name="toolBarEns" />
        </Border>
        <Border x:Name="myBorderNiv" BorderThickness="0" BorderBrush="Transparent" DockPanel.Dock="Top">
            <local:niveauxLibre x:Name="niv" />
        </Border>
        <Canvas x:Name="canvas" 
                Background="{StaticResource MyGrayGridBrush}"
                MouseLeftButtonDown="canvas_MouseLeftButtonDown"
                ClipToBounds="true"
                MouseMove="canvas_MouseMove"
                MouseRightButtonDown="canvas_MouseRightButtonDown"
                MouseLeftButtonUp="canvas_MouseLeftButtonUp"  DockPanel.Dock="Bottom" >
            <TextBlock x:Name="txt" FontSize="15"  Canvas.Left="0" Canvas.Top="0"/>
        </Canvas>
    </DockPanel>
</Page>
